<p id="notice"><%= notice %></p>

<h1>Calculatos</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Firstnumber</th>
      <th>Operator</th>
      <th>Secondnumber</th>
      <th>Result</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calculatos.each do |calculato| %>
      <tr>
        <td><%= calculato.firstname %></td>
        <td><%= calculato.firstnumber %></td>
        <td><%= calculato.operator %></td>
        <td><%= calculato.secondnumber %></td>
        <%= @b= calculato.firstnumber + calculato.secondnumber %>
        <td><%= @b %></td>
        <td><%= link_to 'Show', calculato %></td>
        <td><%= link_to 'Edit', edit_calculato_path(calculato) %></td>
        <td><%= link_to 'Destroy', calculato, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

