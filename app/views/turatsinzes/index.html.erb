<h1>Turatsinzes</h1>

<table border="1">
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Lastname</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @turatsinzes.each do |turatsinze| %>
      <tr>
        <td><%= turatsinze.firstname %></td>
        <td><%= turatsinze.lastname %></td>
        <td><%= link_to 'Show', turatsinze %></td>
        <td><%= link_to 'Edit', edit_turatsinze_path(turatsinze) %></td>
        <td><%= link_to 'Destroy', turatsinze, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

